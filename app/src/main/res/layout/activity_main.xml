<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tViewPressMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPressure" />

    <SeekBar
        android:id="@+id/seekBarPressure"
        android:layout_width="364dp"
        android:layout_height="19dp"
        android:layout_marginStart="28dp"
        android:max="200"
        android:min="10"
        android:progress="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212" />

    <TextView
        android:id="@+id/tViewPress0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="4dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPressure" />

    <TextView
        android:id="@+id/tViewPressMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="4dp"
        android:text="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarPressure" />

    <EditText
        android:id="@+id/inputPressure"
        android:layout_width="105dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:inputType="number"
        android:hint="100"
        app:layout_constraintBottom_toTopOf="@+id/textViewSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBarPressure"
        app:layout_constraintVertical_bias="0.25" />

    <Spinner
        android:id="@+id/spinnerUnitPressure"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_marginTop="56dp"
        android:entries="@array/unidades_presion_spinner"
        app:layout_constraintBottom_toTopOf="@+id/textViewSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toEndOf="@id/inputPressure"
        app:layout_constraintTop_toBottomOf="@id/seekBarPressure"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewSize"
        android:layout_width="121dp"
        android:layout_height="65dp"
        android:text="@string/textViewSize"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewFlow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerSizeBotella"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:entries="@array/tamanos_botella_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSize" />

    <TextView
        android:id="@+id/textViewFlow"
        android:layout_width="119dp"
        android:layout_height="66dp"
        android:layout_marginEnd="60dp"
        android:text="@string/textViewFlow"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputFlow"
        android:layout_width="118dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:hint="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.791"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFlow" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="307dp"
        android:layout_height="78dp"
        android:text="@string/textViewTime"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputFlow" />




</androidx.constraintlayout.widget.ConstraintLayout>
